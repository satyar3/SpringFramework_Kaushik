<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

	<context:annotation-config />
	<bean id="triangle" class="SpringFrameworkByJavaBrains.SpringFrameworkByJavaBrains.propertyAsPrimitives.Triangle">
		<!-- Property tag is for setter injection -->
		<!-- <property name="type" value="Equilateral"></property> -->
		<!-- Constructor-arg is used for constructor injection -->
		<constructor-arg name="type" type="String" value="Bilateral"></constructor-arg>
		<constructor-arg name="height" type="int" value="20"></constructor-arg>
	</bean>
</beans>